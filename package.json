{
  "name": "pragmatist",
  "description": "A collection of tasks to standardize builds.",
  "main": "./dist",
  "bin": "./dist/bin",
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/pragmatist"
  },
  "keywords": [
    "gulp",
    "linter",
    "test",
    "javascript",
    "css",
    "scss"
  ],
  "scripts": {
    "build": "rm -fr ./dist;  cp -r ./src ./dist; node ./node_modules/.bin/babel ./src --out-dir ./dist --source-maps",
    "watch-build": "npm run build; node ./node_modules/.bin/babel --watch ./src --out-dir ./dist --source-maps",
    "lint": "canonical ./src/",
    "bundle-dependencies": "bundled-dependencies",
    "bundle-publish": "npm run bundle-dependencies; rm -fr ./node_modules; npm install --production; git commit -a -m 'Bundled dependencies.'; npm version patch; npm publish; npm install; git push"
  },
  "version": "2.3.73",
  "author": {
    "name": "Gajus Kuizinas",
    "email": "gajus@gajus.com",
    "url": "http://gajus.com"
  },
  "license": "BSD-3-Clause",
  "bundledDependencies": [
    "babel-plugin-add-module-exports",
    "babel-plugin-lodash-modularize",
    "babel-plugin-transform-class-properties",
    "babel-plugin-transform-es2015-modules-commonjs",
    "babel-plugin-transform-es2015-parameters",
    "babel-plugin-typecheck",
    "babel-preset-es2015",
    "babel-preset-react",
    "babel-preset-stage-0",
    "bluebird",
    "canonical",
    "chalk",
    "chokidar",
    "del",
    "globby",
    "gulp",
    "gulp-babel",
    "gulp-plumber",
    "gulp-sourcemaps",
    "gulp-spawn-mocha",
    "gulp-util",
    "lodash",
    "node-notifier",
    "pretty-hrtime",
    "prettyjson",
    "run-sequence",
    "source-map-support",
    "stack-trace",
    "yargs"
  ],
  "dependencies": {
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-lodash-modularize": "^0.3.0",
    "babel-plugin-transform-class-properties": "^6.4.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.4.0",
    "babel-plugin-transform-es2015-parameters": "^6.4.2",
    "babel-plugin-typecheck": "^3.6.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "bluebird": "^3.1.1",
    "canonical": "^2.7.12",
    "chalk": "^1.1.1",
    "chokidar": "^1.4.2",
    "del": "^2.2.0",
    "globby": "^4.0.0",
    "gulp": "^3.9.0",
    "gulp-babel": "^6.1.1",
    "gulp-plumber": "^1.0.1",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-spawn-mocha": "^2.2.2",
    "gulp-util": "^3.0.7",
    "lodash": "^4.0.0",
    "node-notifier": "^4.4.0",
    "pretty-hrtime": "^1.0.1",
    "prettyjson": "^1.1.3",
    "run-sequence": "^1.1.5",
    "source-map-support": "^0.4.0",
    "stack-trace": "^0.0.9",
    "yargs": "^3.31.0"
  },
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "bundle-dependencies": "^0.0.24",
    "bundled-dependencies": "^2.1.0",
    "canonical": "^2.7.12"
  }
}
