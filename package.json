{
  "name": "pragmatist",
  "description": "A collection of tasks to standardize builds.",
  "main": "./dist",
  "bin": "./dist/bin",
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/pragmatist"
  },
  "keywords": [
    "gulp",
    "linter",
    "test",
    "javascript",
    "css",
    "scss"
  ],
  "scripts": {
    "build": "rm -fr ./dist;  cp -r ./src ./dist; node ./node_modules/.bin/babel ./src --out-dir ./dist --source-maps",
    "watch-build": "npm run build; node ./node_modules/.bin/babel --watch ./src --out-dir ./dist --source-maps",
    "lint": "canonical ./src/",
    "prepublish": "node ./node_modules/.bin/bundle-dependencies prepublish",
    "postpublish": "node ./node_modules/.bin/bundle-dependencies postpublish"
  },
  "version": "2.3.21",
  "author": {
    "name": "Gajus Kuizinas",
    "email": "gajus@gajus.com",
    "url": "http://gajus.com"
  },
  "license": "BSD-3-Clause",
  "dependencies": {
    "lodash": "^3.10.1"
  },
  "devDependencies": {
    "bundle-dependencies": "^0.0.3"
  }
}
